extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action="/admin/bayi" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        input(type="hidden" name="id" value=`${bayi._id}`)

        .form-group.row
            label(for="name").col-sm-2.col-form-label Bayi AdÄ±
            .col-sm-10
                input.form-control#name(type="text" name="name"  value=`${bayi.name}`)  

        .form-group.row
            label(for="no").col-sm-2.col-form-label Bayi No
            .col-sm-10
                input.form-control#no(type="text" name="no"  value=`${bayi.no}`) 

        .form-group.row
            label(for="description").col-sm-2.col-form-label Adres
            .col-sm-10
                textarea.form-control(name="description" cols="30" rows="10") #{bayi.description}

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Bayi Kaydet").btn.btn-primary   
           
