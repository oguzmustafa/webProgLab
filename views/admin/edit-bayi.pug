extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action="/admin/products" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        input(type="hidden" name="id" value=`${product._id}`)

        .form-group.row
            label(for="name").col-sm-2.col-form-label Bayi AdÄ±
            .col-sm-10
                input.form-control#name(type="text" name="name"  value=`${product.name}`)  

        .form-group.row
            label(for="no").col-sm-2.col-form-label Bayi No
            .col-sm-10
                input.form-control#no(type="text" name="no"  value=`${product.no}`) 

        .form-group.row
            label(for="imageUrl").col-sm-2.col-form-label Image
            .col-sm-10
                input.form-control#image(type="text" name="imageUrl"  value=`${product.imageUrl}`) 

        .form-group.row
            label(for="categoryid").col-sm-2.col-form-label Category
            .col-sm-10
                 each category in categories
                    input(type="checkbox" name="categoryids" value=`${category._id}` checked=category.selected) 
                    | #{category.name}
                    br
        .form-group.row
            label(for="description").col-sm-2.col-form-label Description
            .col-sm-10
                textarea.form-control(name="description" cols="30" rows="10") #{product.description}

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save Product").btn.btn-primary   
           
